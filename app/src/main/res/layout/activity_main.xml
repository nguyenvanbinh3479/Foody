<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.binh_pc.foody.MainActivity"
    android:background="#f7ffbc">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/lnImage"
            android:layout_margin="15dp"
            >

            <android.support.v4.widget.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/logo1"

                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lnText"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_below="@+id/lnImage"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xin Chào Foodee"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#000"
                />
            <TextView

                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đăng nhập để trải nghiệm tốt hơn"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#000"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_below="@+id/lnText"
            android:id="@+id/lnInput"
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:background="#fff"
                android:padding="10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Tìm kiếm đồ ăn, tên, địa điểm.... TP.HCM"
                android:drawableLeft="@drawable/ic_search_black_24dp"
                android:drawableRight="@drawable/ic_gps_not_fixed_black_24dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/lnInput"
            android:id="@+id/lnFood"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
            android:id="@+id/lnPic1"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_width="1dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="110dp"
                    android:id="@+id/bgImage"
                    android:src="@drawable/pic1"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:src="@drawable/logoitem"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignBottom="@+id/bgImage"
                    android:background="@drawable/added"
                    />
            </RelativeLayout>
            <TextView

                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kham pha"
                android:textAlignment="center"
                android:textColor="#000"
                android:textStyle="bold"
                />
        </LinearLayout>
            <LinearLayout
                android:id="@+id/lnPic2"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:layout_width="1dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="110dp"
                        android:id="@+id/bgImage2"
                        android:src="@drawable/pic1"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:src="@drawable/logoitem"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignBottom="@+id/bgImage2"
                        android:background="@drawable/added"
                        />
                </RelativeLayout>
                <TextView

                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kham pha"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnPic3"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:layout_width="1dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="110dp"
                        android:id="@+id/bgImage3"
                        android:src="@drawable/pic1"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:src="@drawable/logoitem"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignBottom="@+id/bgImage3"
                        android:background="@drawable/added"
                        />
                </RelativeLayout>
                <TextView

                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kham pha"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textStyle="bold"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
        android:layout_below="@+id/lnFood"
        android:id="@+id/lnFood2"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/lnPic11"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_width="1dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="110dp"
                    android:id="@+id/bgImage11"
                    android:src="@drawable/pic1"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:src="@drawable/logoitem"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignBottom="@+id/bgImage11"
                    android:background="@drawable/added"
                    />
            </RelativeLayout>
            <TextView

                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kham pha"
                android:textAlignment="center"
                android:textColor="#000"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lnPic22"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_width="1dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="110dp"
                    android:id="@+id/bgImage22"
                    android:src="@drawable/pic1"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:src="@drawable/logoitem"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignBottom="@+id/bgImage22"
                    android:background="@drawable/added"
                    />
            </RelativeLayout>
            <TextView

                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kham pha"
                android:textAlignment="center"
                android:textColor="#000"
                android:textStyle="bold"
                />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        >
        <LinearLayout
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_weight="1"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home_black_24dp"
                />
            <ImageButton
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_weight="1"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_bookmark_black_24dp"
                />
            <ImageButton
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="#fff"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_receipt_black_24dp"
                />
            <ImageButton
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="#fff"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_notifications_black_24dp"
                />
            <ImageButton
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="#fff"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_account_box_black_24dp"
                />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
